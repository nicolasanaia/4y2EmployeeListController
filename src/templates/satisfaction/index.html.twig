{% extends 'base.html.twig' %}

{% block title %}Satisfaction index{% endblock %}

{% block body %}
    <h1>Satisfaction index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StudentName</th>
                <th>ClassRated</th>
                <th>Rate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for satisfaction in satisfactions %}
            <tr>
                <td>{{ satisfaction.id }}</td>
                <td>{{ satisfaction.studentName }}</td>
                <td>{{ satisfaction.classRated }}</td>
                <td>{{ satisfaction.rate }}</td>
                <td>
                    <a href="{{ path('satisfaction_show', {'id': satisfaction.id}) }}">show</a>
                    <a href="{{ path('satisfaction_edit', {'id': satisfaction.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('satisfaction_new') }}">Create new</a>
{% endblock %}
