{% extends 'base.html.twig' %}

{% block title %}Students{% endblock %}

{% block body %}
    <h1>Students</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ student.name }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ student.birthDate ? student.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Cpf</th>
                <td>{{ student.cpf }}</td>
            </tr>
            <tr>
                <th>Plan</th>
                <td>{{ student.premiumStudentPlan ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <h2>Views History</h2>
    {% for view in student.viewHistories %}

        <p>{{ view }}</p>

    {% endfor %}

    <a href="{{ path('students_index') }}">back to list</a>

    <a href="{{ path('students_edit', {'id': student.id}) }}">edit</a>

    {{ include('students/_delete_form.html.twig') }}
{% endblock %}
